{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "dist",
    "preserveConstEnums": false,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/spec.ts"]
}
